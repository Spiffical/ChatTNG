# Server Configuration
PORT=8080
DEBUG=false
NODE_ENV=production

# Database Settings
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/chattng
POSTGRES_CONNECT_TIMEOUT=30
POSTGRES_POOL_TIMEOUT=60
POSTGRES_COMMAND_TIMEOUT=60
POSTGRES_MAX_RETRIES=5
POSTGRES_RETRY_INTERVAL=10

# Redis Settings (if using)
REDIS_URL=redis://localhost:6379

# AWS S3 Settings
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET=chattng-clips

# API Settings
API_TITLE="ChatTNG API"
API_DESCRIPTION="Star Trek: TNG Dialog Chat API"
API_VERSION=1.0.0
PROJECT_ROOT=/app/backend

# CORS Settings (update with your Vercel URL)
CORS_ORIGINS=https://your-app.vercel.app
CORS_ALLOW_CREDENTIALS=true

# OpenAI Settings
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=text-embedding-3-small

# Pinecone Settings
PINECONE_API_KEY=your_pinecone_key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX=chattng-dialogs

# Security Settings
JWT_SECRET=your_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Session Settings
SESSION_COOKIE=chattng_session
SESSION_EXPIRE=86400
SHARE_EXPIRE_DAYS=7
SHARE_BASE_URL=https://your-app.vercel.app

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60 